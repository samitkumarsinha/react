test.js
import { useState } from "react";
import { useSelector } from "react-redux";

export default function Test() {
  const [val, setval]=useState([]);
  const myrec = useSelector((state) => state.mynum);
  myrec.then(item => {
    setval(item);
  })
  const recs = val.map((item, key) => 
      <div key = {key}>
        <p>{item.name}</p>
      </div>
  )
  return <>{recs}</>;
}
