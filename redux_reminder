fetch using redux
updown.js
const initialstate = 0;
export const changenumber = (state = initialstate, action) => {
  switch (action.type) {
    case "INCREMENT":
      return state + action.payload;
    case "DECREMENT":
      return state - 1;
    default:
      return state;
  }
};
export const mynum = () => {
  return fetch('https://jsonplaceholder.typicode.com/users').then(item => item.json())
};
